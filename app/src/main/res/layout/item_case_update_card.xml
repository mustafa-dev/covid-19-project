<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="Güncel Vaka"
        android:textColor="@color/Black"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="4dp"
        android:text="Son Güncelleme"
        android:textColor="@color/Gray"
        android:textSize="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="16dp"
        android:text="Detayları Gör"
        android:textSize="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_marginTop="56dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <ImageView
            android:id="@+id/iv_item_case_update_card_infected_color"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginStart="56dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/orange_eclipse"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/iv_item_case_update_card_death_color"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginTop="20dp"
            android:layout_toEndOf="@+id/iv_item_case_update_card_infected_color"
            android:src="@drawable/red_eclipse"
            app:layout_constraintEnd_toStartOf="@+id/iv_item_case_update_card_recovered_color"
            app:layout_constraintStart_toEndOf="@+id/iv_item_case_update_card_infected_color"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/iv_item_case_update_card_recovered_color"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="56dp"
            android:layout_toEndOf="@+id/iv_item_case_update_card_death_color"
            android:src="@drawable/green_eclipse"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_item_case_update_card_infected_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_item_case_update_card_infected_color"
            android:layout_marginStart="32dp"
            android:layout_marginTop="12dp"
            android:text="1072"
            android:textColor="#f7941d"
            android:textSize="32dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/iv_item_case_update_card_infected_color" />

        <TextView
            android:id="@+id/tv_item_case_update_card_death_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_item_case_update_card_infected_color"
            android:layout_marginStart="86dp"
            android:layout_marginTop="12dp"
            android:layout_toEndOf="@+id/tv_item_case_update_card_infected_number"
            android:text="87"
            android:textColor="#ff0404"
            android:textSize="32dp"
            app:layout_constraintStart_toEndOf="@+id/tv_item_case_update_card_infected_number"
            app:layout_constraintTop_toBottomOf="@+id/iv_item_case_update_card_death_color" />

        <TextView
            android:id="@+id/tv_item_case_update_card_recovered_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_item_case_update_card_infected_color"
            android:layout_marginStart="102dp"
            android:layout_marginTop="12dp"
            android:layout_toEndOf="@+id/tv_item_case_update_card_death_number"
            android:text="46"
            android:textColor="#20ba15"
            android:textSize="32dp"
            app:layout_constraintStart_toEndOf="@+id/tv_item_case_update_card_death_number"
            app:layout_constraintTop_toBottomOf="@+id/iv_item_case_update_card_recovered_color" />

        <TextView
            android:id="@+id/tv_item_case_update_card_infected"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_item_case_update_card_recovered_number"
            android:layout_marginStart="42dp"
            android:layout_marginTop="10dp"
            android:text="Infected"
            android:textColor="@color/Gray"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_item_case_update_card_infected_number" />

        <TextView
            android:id="@+id/tv_item_case_update_card_death"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_item_case_update_card_recovered_number"
            android:layout_marginStart="90dp"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@+id/tv_item_case_update_card_infected"
            android:text="Deaths"
            android:textColor="@color/Gray"
            app:layout_constraintStart_toEndOf="@+id/tv_item_case_update_card_infected"
            app:layout_constraintTop_toBottomOf="@+id/tv_item_case_update_card_death_number" />

        <TextView
            android:id="@+id/tv_item_case_update_card_recovered"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_item_case_update_card_recovered_number"
            android:layout_marginStart="83dp"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@+id/tv_item_case_update_card_death"
            android:text="Recovered"
            android:textColor="@color/Gray"
            app:layout_constraintStart_toEndOf="@+id/tv_item_case_update_card_death"
            app:layout_constraintTop_toBottomOf="@+id/tv_item_case_update_card_recovered_number" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>