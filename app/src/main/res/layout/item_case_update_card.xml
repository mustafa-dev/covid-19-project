<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="Güncel Vaka"
        android:textColor="@color/Black"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="4dp"
        android:text="Son Güncelleme"
        android:textColor="@color/Gray"
        android:textSize="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="16dp"
        android:text="Detayları Gör"
        android:textSize="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="12dp"
        android:layout_marginRight="12dp"
        android:background="@drawable/update_cases_card"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2">
        <ImageView
            android:id="@+id/iv_item_case_update_card_infected_color"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="28dp"
            android:src="@drawable/orange_eclipse" />

        <ImageView
            android:id="@+id/iv_item_case_update_card_death_color"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="120dp"
            android:layout_toEndOf="@+id/iv_item_case_update_card_infected_color"
            android:src="@drawable/red_eclipse" />

        <ImageView
            android:id="@+id/iv_item_case_update_card_recovered_color"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="120dp"
            android:layout_toEndOf="@+id/iv_item_case_update_card_death_color"
            android:src="@drawable/green_eclipse" />

        <TextView
            android:id="@+id/tv_item_case_update_card_infected_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_item_case_update_card_infected_color"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="12dp"
            android:text="1072"
            android:textColor="#f7941d"
            android:textSize="32dp" />

        <TextView
            android:id="@+id/tv_item_case_update_card_death_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_item_case_update_card_infected_color"
            android:layout_marginLeft="84dp"
            android:layout_marginTop="12dp"
            android:layout_toEndOf="@+id/tv_item_case_update_card_infected_number"
            android:text="87"
            android:textColor="#ff0404"
            android:textSize="32dp" />

        <TextView
            android:id="@+id/tv_item_case_update_card_recovered_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_item_case_update_card_infected_color"
            android:layout_marginStart="104dp"
            android:layout_marginTop="12dp"
            android:layout_toEndOf="@+id/tv_item_case_update_card_death_number"
            android:text="46"
            android:textColor="#20ba15"
            android:textSize="32dp" />

        <TextView
            android:id="@+id/tv_item_case_update_card_infected"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_item_case_update_card_recovered_number"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="24dp"
            android:text="Infected"
            android:textColor="@color/Gray" />

        <TextView
            android:id="@+id/tv_item_case_update_card_death"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_item_case_update_card_recovered_number"
            android:layout_marginLeft="88dp"
            android:layout_marginTop="24dp"
            android:layout_toEndOf="@+id/tv_item_case_update_card_infected"
            android:text="Deaths"
            android:textColor="@color/Gray" />

        <TextView
            android:id="@+id/tv_item_case_update_card_recovered"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_item_case_update_card_recovered_number"
            android:layout_marginLeft="84dp"
            android:layout_marginTop="24dp"
            android:layout_toEndOf="@+id/tv_item_case_update_card_death"
            android:text="Recovered"
            android:textColor="@color/Gray" />
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>